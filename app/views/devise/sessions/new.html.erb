  <div class="shadow-xl p-5 bg-white w-96">
    <h2 class="text-lg font-bold">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mt-2">
        <%= f.label :email, class: 'text-sm text-gray-500' %><br />
        <%= f.email_field :email, class: "rounded w-full", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mt-2">
        <%= f.label :password, class: 'text-sm text-gray-500' %>
        <%= f.password_field :password, class: 'rounded w-full', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mt-3 text-sm">
        Do not have an account? <span class="text-blue-500"><%= render "devise/shared/links" %></span>
      </div>

      <%= f.submit "Submit", class: 'mt-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white text-center rounded p-2 block w-full cursor-pointer' %>
    <% end %>
  </div>
