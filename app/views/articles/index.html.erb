<div class="flex mt-5 text-blue-900">
  <div class="basis-1/3 max-w-xs mr-2">
    <div class="bg-white py-4 px-3">
      <h3>Categories</h3>
    </div>
    <div class="bg-white mt-5 py-4 px-3">
      <h3>Top articles</h3>
    </div>
  </div>
  <div class="basis-2/3">
    <div class="flex flex-wrap">
      <% @articles.each do |article| %>
        <div class="max-w-sm bg-white mb-2 rounded overflow-hidden shadow-md basis-1/3 mx-1 grow">
          <div class="px-6 py-4">
            <div class="font-bold text-xl mb-2">
              <%= link_to article.title, article %>
            </div>
            <p class="text-gray-700 text-base h-28 overflow-y-auto">
              <%= article.body %>
            </p>
          </div>
          <div class="px-6 py-2">
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
          #article
        </span>
          </div>
          <div class="text-right px-3 py-1">
            Written by <%= article.user.first_name %> <%= article.user.second_name %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="flex justify-center mt-3">
  <%= paginate @articles %>
</div>
